<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Фон прогресс-бара -->
    <item android:id="@android:id/background">
        <shape android:shape="rectangle">
            <solid android:color="#DDDDDD"/> <!-- Светло-серый фон -->
            <corners android:radius="10dp"/> <!-- Скругленные углы -->
        </shape>
    </item>

    <!-- Прогресс (заполненная часть) -->
    <item android:id="@android:id/progress">
        <shape android:shape="rectangle">
            <solid android:color="#76FF03"/> <!-- Ярко-зеленый цвет для прогресса -->
            <corners android:radius="10dp"/> <!-- Скругленные углы для прогресса -->
        </shape>
    </item>

    <!-- Обводка, можно добавить по желанию -->
    <item android:id="@android:id/secondaryProgress">
        <shape android:shape="rectangle">
            <solid android:color="#4CAF50"/> <!-- Вторичный прогресс (например, для отображения индикатора загрузки) -->
            <corners android:radius="10dp"/>
        </shape>
    </item>
</layer-list>
